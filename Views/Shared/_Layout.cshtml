<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriGreen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriGreen.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tree text-success"></i> AgriGreen
                </a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @* Left-side nav links *@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link agrigreen-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link agrigreen-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacy
                            </a>
                        </li> *@

                        @* Farmer-only links *@
                        @if (User.IsInRole("Farmer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link agrigreen-link" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-box"></i> My Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link agrigreen-link" asp-controller="Products" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> Add Product
                                </a>
                            </li>
                        }

                        @* Employee-only links *@
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link agrigreen-link" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-grid"></i> All Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link agrigreen-link" asp-controller="Farmers" asp-action="Index">
                                    <i class="bi bi-people"></i> All Farmers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link agrigreen-link" asp-controller="Farmers" asp-action="Create">
                                    <i class="bi bi-person-plus"></i> Add Farmer
                                </a>
                            </li>
                        }
                    </ul>

                    @* Profile icon dropdown *@
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    @* <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - AgriGreen</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="agrigreen-link">
                        <i class="bi bi-shield-check me-1"></i>Privacy
                    </a>
                </div>
            </div>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
