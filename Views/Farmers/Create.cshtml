@model AgriGreen.Models.Farmer

@{
    ViewData["Title"] = "Create Farmer";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-agrigreen">
            <h3 class="text-white m-0">Create Farmer</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Farmer name" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <label asp-for="UserId"></label>
                </div>
                
                <div class="d-flex mt-4">
                    <button type="submit" class="btn btn-agrigreen me-2">
                        <i class="bi bi-save me-2"></i>Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-agrigreen">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
