@model AgriGreen.Models.Farmer

@{
    ViewData["Title"] = "Farmer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card fade-in custom-form-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge form-icon"></i>
                        <h3 class="mb-0">Farmer Details</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-3">
                                    User Account
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.User.Id)
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="d-flex mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-green">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
