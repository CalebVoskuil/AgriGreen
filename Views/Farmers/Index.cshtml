@model IEnumerable<AgriGreen.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-agrigreen d-flex justify-content-between align-items-center">
            <h3 class="text-white m-0">Farmers</h3>
            <a asp-action="Create" class="btn btn-outline-light">
                <i class="bi bi-plus-circle me-2"></i>Add New Farmer
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-agrigreen">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                User Account
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Id)
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-info-circle me-1"></i>Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
