@model AgriGreen.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card fade-in custom-form-card">
                <div class="card-header d-flex justify-content-between align-items-center bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle form-icon"></i>
                        <h3 class="mb-0">Delete Confirmation</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-circle fs-4 me-3"></i>
                            <p class="mb-0">Are you sure you want to delete this farmer? This action cannot be undone.</p>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-3">
                                    User Account
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.User.Id)
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="bi bi-trash me-2"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-green">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
