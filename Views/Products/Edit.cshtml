@model AgriGreen.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card custom-form-card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <i class="bi bi-pencil-square form-icon"></i>
                    <h5 class="m-0">Product Information</h5>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" required />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ProductionDate" class="form-label"></label>
                        <input asp-for="ProductionDate" class="form-control" type="date" required />
                        <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FarmerId" class="form-label"></label>
                        <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.FarmerId"></select>
                        <span asp-validation-for="FarmerId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4 d-flex">
                        <button type="submit" class="btn btn-green me-2">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-action="Index" class="btn btn-outline-green">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
